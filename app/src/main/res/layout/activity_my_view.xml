<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.kye.basemodule.view.MyCircleView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        app:inner_color="@color/colorPrimaryDark"
        />


    <com.kye.basemodule.view.CircleImageView
        android:id="@+id/circleImage"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:border_width="2dp"
        app:border_color="@color/colorPrimaryDark"
        android:src="@mipmap/ic_launcher"
        />

    <ImageView
        android:id="@+id/image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"

        />

    <com.kye.basemodule.view.CircleProgress
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
            app:circle_show_text="true"
        app:circle_progress="40"
        app:circle_max_progress="100"
        app:circle_text_color="@color/red"
        app:circle_border_width="4dp"
        app:circle_text_size="12sp"
        />

</RelativeLayout>